<%- include('layouts/header') %>

<div class="container px-5 my-5">
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
      <h1>Editar Usuario</h1>
      <form
        id="edit-form"
        action="/edit/<%= user._id %>"
        method="post"
        enctype="multipart/form-data"
      >
        <div class="mb-3">
          <label class="form-label" for="name">Nombre</label>
          <input
            class="form-control"
            id="name"
            name="name"
            type="text"
            value="<%= user.name %>"
          />
        </div>
        <div class="mb-3">
          <label class="form-label" for="email">Email</label>
          <input
            class="form-control"
            id="email"
            name="email"
            type="email"
            value="<%= user.email %>"
          />
        </div>
        <div class="mb-3">
          <label class="form-label" for="phone">Tel√©fono</label>
          <input
            class="form-control"
            id="phone"
            name="phone"
            type="text"
            value="<%= user.phone %>"
          />
        </div>
        <div class="mb-3">
          <label for="image" class="form-label">Foto</label>
          <input name="image" class="form-control" type="file" />
          <input type="hidden" name="existingImage" value="<%= user.image %>" />
          <!-- Guardar el nombre de la imagen existente -->
        </div>

        <div class="d-grid">
          <input
            type="submit"
            class="btn btn-primary bt-lg"
            value="Actualizar Usuario"
          />
        </div>
      </form>
    </div>
    <div class="col-md-3"></div>
  </div>
</div>

<%- include('layouts/footer') %>
